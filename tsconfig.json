{
    "compilerOptions": {
      "baseUrl": ".",
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "Node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"],
      "paths": {
        "~/*": ["src/*"]
      },
      "skipLibCheck": true
    },
    "vueCompilerOptions": {
      "target": 3
    },
    "include": ["src/**/*"]
  }